node {
    stage("SCM Checkout") {
        git branch: "main", url: "https://github.com/Ganesh-Jayasamraj-Teslon/Back-End_Project-Testing"
    }

    stage("Docker MongoDB") {
        sh "docker network create -t bridge --name test"
        sh "docker run -itd -p 27017:27017 --network test --name mongodb mongo:latest"
    }

    stage("Docker Image") {
        sh "docker build -t back-end ."
    }

    stage("Docker Containerization and deployment") {
        sh "docker run -itd -p 3000:3000 --name work back-end"
    }
}